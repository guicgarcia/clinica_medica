<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th class="success">Name</th>
      <th class="success">Cpf</th>
      <th class="success">Birth</th>
      <th class="success">Phone</th>
      <th class="success">Address</th>
      <th class="success">Companion</th>
      <th colspan="3" class="active"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.cpf %></td>
        <td><%= patient.birth %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.address %></td>
        <td><%= patient.companion %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

