<p id="notice"><%= notice %></p>

<h1>Consultations</h1>

<table>
  <thead>
    <tr>
      <th>Historic</th>
      <th>Note</th>
      <th>Payment</th>
      <th>Status</th>
      <th>Doctor</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consultations.each do |consultation| %>
      <tr>
        <td><%= consultation.historic %></td>
        <td><%= consultation.note %></td>
        <td><%= consultation.payment %></td>
        <td><%= consultation.status %></td>
        <td><%= consultation.doctor %></td>
        <td><%= consultation.patient %></td>
        <td><%= link_to 'Show', consultation %></td>
        <td><%= link_to 'Edit', edit_consultation_path(consultation) %></td>
        <td><%= link_to 'Destroy', consultation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

